---
import SimpleNavigation from "../components/SimpleNavigation.astro/SimpleNavigation.astro";
import Hero from "../components/Hero/Hero.astro";
import MenuList from "../components/MenuList/MenuList.astro";
import CupcakeMenu from "../components/CupcakeMenu/CupcakeMenu.astro";
import SBSReverse from "../components/SBSReverse/SBSReverse.astro";
import Contact from "../components/Contact/Contact.astro";
import Footer from "../components/Footer/Footer.astro";
import "../styles/root.less";
import Favicon16 from '../assets/favicons/favicon-16.png';
import Favicon192 from '../assets/favicons/favicon-192.png';
import Favicon96 from '../assets/favicons/favicon-96.png';
import Favicon64 from '../assets/favicons/favicon-64.png';
import Favicon32 from '../assets/favicons/favicon-32.png';
import Favicon57 from '../assets/favicons/favicon-57.png';
import Favicon72 from '../assets/favicons/favicon-72.png';
import Favicon160 from '../assets/favicons/favicon-160.png';
import Favicon114 from '../assets/favicons/favicon-114.png';
import FaviconIco from '../assets/favicons/favicon.ico';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Ma Cherie Patisserie Bakery - Indulge in exquisite pastries and treats in Binh Tan District, Ho Chi Minh City, Vietnam"
		/>
		<meta
			name="keywords"
			content="Ma Cherie Patisserie, bakery, pastries, desserts, cakes, treats, Binh Tan District, Ho Chi Minh City, Vietnam"
		/>
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />

		<!-- Open Graph meta tags for better social media sharing -->
		<meta property="og:title" content="Ma Cherie Patisserie Bakery" />
		<meta
			property="og:description"
			content="Indulge in exquisite pastries and treats from Ma Cherie Patisserie Bakery in Binh Tan District, Ho Chi Minh City, Vietnam"
		/>
		<meta property="og:image" content="../assets/images/bakerylogo.svg" />
		<!-- Use a compelling image URL for sharing -->
		<meta property="og:url" content="https://www.macheriepatisserie.com" />
		<!-- Replace with your website URL -->
		<meta property="og:type" content="website" />
		<!-- ****** faviconit.com favicons ****** -->
		<link rel="shortcut icon" href="../assets/favicons/favicon.ico" />
		<link rel="icon" sizes="16x16 32x32 64x64" href={FaviconIco} />
		<link
			rel="icon"
			type="image/png"
			sizes="196x196"
			href={Favicon192}
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="160x160"
			href={Favicon160}
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="96x96"
			href={Favicon96}
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="64x64"
			href={Favicon64}
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href={Favicon32}
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href={Favicon16}
		/>
		<link rel="apple-touch-icon" href={Favicon57} />
		<link rel="apple-touch-icon" sizes="114x114" href={Favicon114} />
		<link rel="apple-touch-icon" sizes="72x72" href={Favicon72} />
		<meta name="msapplication-TileColor" content="#FFFFFF" />
		<meta name="msapplication-TileImage" content="../assets/favicons/favicon-144.png" />
		<meta name="msapplication-config" content="../assets/favicons/browserconfig.xml" />
		<title>Astro</title>
	</head>
	<body>
		<SimpleNavigation />
		<Hero />
		<SBSReverse />
		<MenuList />
		<CupcakeMenu />
		<Contact />
		<Footer />
	</body>
</html>
