---
import "./Contact.less";
---

<!-- ============================================ --><!--                   Stats                      --><!-- ============================================ --><!-- No headers, so no section tag -->
<div id="contact-us">
	<ul class="cs-stat-group">
		<li class="cs-item">
			<picture class="cs-picture">
				<img
					class="cs-icon"
					src="https://csimg.nyc3.digitaloceanspaces.com/Contact-Page/phone-grey.svg"
					alt="icon"
					width="35"
					height="40"
					loading="lazy"
					decoding="async"
					aria-hidden="true"
				/>
			</picture>
			<div class="cs-flex-group">
				<span class="cs-header">Phone</span>
				<a href="tel:0768333326" class="cs-link">0768 333 326</a>
				<a href="tel:0767331327" class="cs-link">0767 331 327</a>
			</div>
		</li>
		<li class="cs-item">
			<picture class="cs-picture">
				<img
					class="cs-icon"
					src="https://csimg.nyc3.digitaloceanspaces.com/Contact-Page/pin-grey.svg"
					alt="icon"
					width="40"
					height="35"
					loading="lazy"
					decoding="async"
					aria-hidden="true"
				/>
			</picture>
			<div class="cs-flex-group">
				<span class="cs-header">Address</span>
				<a
					href="https://tinyurl.com/macheriepatisserie"
					class="cs-link"
					>4447 Nguyen Cuu Phu<br />Binh Tan District, HCMC</a
				>
			</div>
		</li>
		<li class="cs-item">
			<picture class="cs-picture">
				<img
					class="cs-icon"
					src="https://csimg.nyc3.digitaloceanspaces.com/Contact-Page/clock-grey.svg"
					alt="icon"
					width="40"
					height="40"
					loading="lazy"
					decoding="async"
					aria-hidden="true"
				/>
			</picture>
			<div class="cs-flex-group">
				<span class="cs-header">Open Hours</span>
				<span class="cs-hours">Tuesday To Sunday</span>
				<span class="cs-hours">6:00 AM - 5:00 PM</span>
			</div>
		</li>
	</ul>
</div>
